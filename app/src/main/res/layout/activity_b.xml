<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <EditText
        android:id="@+id/editTextActivityBString"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter String"
        android:inputType="text" />

    <EditText
        android:id="@+id/editTextActivityBInteger"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Integer"
        android:inputType="number" />

    <EditText
        android:id="@+id/editTextActivityBDouble"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Double"
        android:inputType="numberDecimal" />

    <Button
        android:id="@+id/btnActivityBGoToActivityA"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Go To Activity A" />

</LinearLayout>